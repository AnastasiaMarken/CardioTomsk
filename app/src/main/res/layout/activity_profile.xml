<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/onPrimary"
	tools:context=".ProfileActivity">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="20dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<ImageView
					android:id="@+id/img_back"
					android:layout_width="30dp"
					android:layout_height="30dp"
					android:paddingLeft="-15dp"
					android:src="@drawable/ic_back"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:tint="@color/primary" />

				<ImageView
					android:id="@+id/user_profile"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_margin="6dp"
					android:background="@drawable/shape_btn_round"
					android:elevation="6dp"
					android:outlineAmbientShadowColor="@color/primary"
					android:outlineSpotShadowColor="@color/primary"
					android:padding="5dp"
					android:shadowColor="@color/primary"
					android:src="@drawable/ic_icon"
					android:transitionName="icon_profile"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toTopOf="parent" />
			</androidx.constraintlayout.widget.ConstraintLayout>

			<TextView
				style="@style/TextHeader1.Primary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:text="Ivanov Oleg Viktorovich" />

			<androidx.appcompat.widget.LinearLayoutCompat
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="60dp"
				android:orientation="vertical">

				<TextView
					android:id="@+id/profile"
					style="@style/TextMain2.Primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/profile" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginVertical="20dp"
					android:background="@color/primary" />

				<TextView
					android:id="@+id/profile_custom"
					style="@style/TextMain2.Primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/profile_custom" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginVertical="20dp"
					android:background="@color/primary" />

				<TextView
					android:id="@+id/profile_confidentiality"
					style="@style/TextMain2.Primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/profile_confidentiality" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginVertical="20dp"
					android:background="@color/primary" />

				<TextView
					android:id="@+id/profile_notifications"
					style="@style/TextMain2.Primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/profile_notifications" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:layout_marginVertical="20dp"
					android:background="@color/primary" />

				<TextView
					android:id="@+id/profile_exit"
					style="@style/TextMain2.Primary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/profile_exit" />
			</androidx.appcompat.widget.LinearLayoutCompat>


		</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toTopOf="@id/logo"
		android:layout_marginBottom="5dp">

		<ImageView
			android:id="@+id/facebook"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:padding="7dp"
			android:layout_margin="15dp"
			android:src="@drawable/facebook"
			android:background="@drawable/shape_btn_round"
			android:backgroundTint="@color/primary"
			android:elevation="6dp"
			android:outlineAmbientShadowColor="@color/primary"
			android:shadowColor="@color/primary"
			android:outlineSpotShadowColor="@color/primary"
			app:tint="@color/onPrimary"/>
		<ImageView
			android:id="@+id/youtube"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:padding="7dp"
			android:layout_margin="15dp"
			android:src="@drawable/youtube"
			android:background="@drawable/shape_btn_round"
			android:backgroundTint="@color/primary"
			android:elevation="6dp"
			android:outlineAmbientShadowColor="@color/primary"
			android:shadowColor="@color/primary"
			android:outlineSpotShadowColor="@color/primary"
			app:tint="@color/onPrimary"/>
		<ImageView
			android:id="@+id/instagram"
			android:layout_width="35dp"
			android:layout_height="35dp"
			android:padding="7dp"
			android:layout_margin="15dp"
			android:src="@drawable/instagram"
			android:background="@drawable/shape_btn_round"
			android:backgroundTint="@color/primary"
			android:elevation="6dp"
			android:outlineAmbientShadowColor="@color/primary"
			android:shadowColor="@color/primary"
			android:outlineSpotShadowColor="@color/primary"
			app:tint="@color/onPrimary"/>
	</LinearLayout>

		<ImageView
			android:id="@+id/logo"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:src="@drawable/ic_logo"
			app:layout_constrainedWidth="true"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginBottom="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>